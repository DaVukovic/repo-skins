<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- shutdownmenu -->
	<defaultcontrol always="true">6000</defaultcontrol>
	<animation type="WindowOpen">
		<effect center="auto" tween="circle" easing="out" end="100" start="110" time="400" type="zoom"/>
		<effect easing="inout" end="100" start="0" time="400" tween="sine" type="fade"/>
	</animation>
	<animation easing="inout" effect="fade" end="0" start="100" time="400" tween="sine">WindowClose</animation>
	<controls>
		<!-- Background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>special://skin/extras/backgrounds/shutdown.png</texture>
		</control>
		<!-- Time -->
		<control type="grouplist">
			<centerleft>50%</centerleft>
			<top>172</top>
			<width>1920</width>
			<height>148</height>
			<align>center</align>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<control type="label">
				<width>auto</width>
				<height>148</height>
				<label>$INFO[System.Time(HH)]</label>
				<font>Light148</font>
				<textcolor>ffbfbcbb</textcolor>
			</control>
			<control type="group">
				<width>40</width>
				<height>148</height>
				<visible>String.EndsWith(System.Time(ss),0) | String.EndsWith(System.Time(ss),2) | String.EndsWith(System.Time(ss),4) | String.EndsWith(System.Time(ss),6) | String.EndsWith(System.Time(ss),8)</visible>
				<control type="label">
					<top>42</top>
					<width>40</width>
					<height>20</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>ffbfbcbb</textcolor>
				</control>
				<control type="label">
					<top>96</top>
					<width>40</width>
					<height>20</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>ffbfbcbb</textcolor>
				</control>
			</control>
			<control type="group">
				<width>40</width>
				<height>148</height>
				<visible>String.EndsWith(System.Time(ss),1) | String.EndsWith(System.Time(ss),3) | String.EndsWith(System.Time(ss),5) | String.EndsWith(System.Time(ss),7) | String.EndsWith(System.Time(ss),9)</visible>
				<control type="label">
					<top>42</top>
					<width>40</width>
					<height>20</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>88bfbcbb</textcolor>
				</control>
				<control type="label">
					<top>96</top>
					<width>40</width>
					<height>20</height>
					<label>路</label>
					<font>Light80</font>
					<align>center</align>
					<textcolor>88bfbcbb</textcolor>
				</control>
			</control>
			<control type="label">
				<width>auto</width>
				<height>148</height>
				<label>$INFO[System.Time(mm)]</label>
				<font>Light148</font>
				<textcolor>ffbfbcbb</textcolor>
			</control>
			<control type="label">
				<top>79</top>
				<width>auto</width>
				<height>58</height>
				<label>$INFO[System.Time(xx)]</label>
				<font>Med58</font>
				<textcolor>ffbfbcbb</textcolor>
				<visible>!String.IsEmpty(System.Time(xx))</visible>
			</control>
		</control>
		<!-- List -->
		<control id="6000" type="fixedlist">
			<centerleft>50%</centerleft>
			<top>542</top>
			<width>1596</width>
			<height>228</height>
			<scrolltime>0</scrolltime>
			<focusposition>3</focusposition>
			<movement>3</movement>
			<orientation>horizontal</orientation>
			<defaultcontrol always="true">1</defaultcontrol>
			<animation effect="slide" time="0" end="-114,0" condition="String.IsEqual(Container(6000).NumItems,2) | String.IsEqual(Container(6000).NumItems,4) | String.IsEqual(Container(6000).NumItems,6)">Conditional</animation>
			<itemlayout height="228" width="228">
				<control type="image">
					<left>20</left>
					<width>188</width>
					<height>188</height>
					<texture border="3">common/button_nf.png</texture>
				</control>
				<control type="image">
					<left>70</left>
					<top>16</top>
					<width>88</width>
					<height>88</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>
				<control type="textbox">
					<left>30</left>
					<top>102</top>
					<width>168</width>
					<height>66</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Med23Spaced</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>ffa5a5a6</textcolor>
				</control>
			</itemlayout>
			<focusedlayout height="228" width="228">
				<control type="image">
					<left>20</left>
					<width>188</width>
					<height>188</height>
					<texture border="3">common/button_fo.png</texture>
				</control>
				<control type="image">
					<left>70</left>
					<top>16</top>
					<width>88</width>
					<height>88</height>
					<colordiffuse>d9000000</colordiffuse>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>
				<control type="textbox">
					<left>30</left>
					<top>102</top>
					<width>168</width>
					<height>66</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>Med23Spaced</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>ff000000</textcolor>
				</control>
			</focusedlayout>
			<content>
				<item id="1">
					<label>$LOCALIZE[13009]</label>
					<icon>shutdown/DefaultQuit.png</icon>
					<visible>!Skin.HasSetting(Shutdown_1_Off)</visible>
					<visible>System.ShowExitButton</visible>
					<onclick>Close</onclick>
					<onclick>Quit</onclick>
				</item>
				<item id="2">
					<label>$LOCALIZE[13011]</label>
					<icon>shutdown/DefaultSleep.png</icon>
					<visible>!Skin.HasSetting(Shutdown_2_Off)</visible>
					<visible>System.CanSuspend</visible>
					<onclick>Close</onclick>
					<onclick>Suspend</onclick>
				</item>
				<item id="3">
					<label>$LOCALIZE[13010]</label>
					<icon>shutdown/DefaultSleep.png</icon>
					<visible>!Skin.HasSetting(Shutdown_3_Off)</visible>
					<visible>System.CanHibernate</visible>
					<onclick>Close</onclick>
					<onclick>Hibernate</onclick>
				</item>
				<item id="4">
					<label>$LOCALIZE[13013]</label>
					<icon>shutdown/DefaultReboot.png</icon>
					<visible>!Skin.HasSetting(Shutdown_4_Off)</visible>
					<visible>System.CanReboot</visible>
					<onclick>Close</onclick>
					<onclick>Reboot</onclick>
				</item>
				<item id="5">
					<label>$LOCALIZE[13016]</label>
					<icon>shutdown/DefaultShutdown.png</icon>
					<visible>!Skin.HasSetting(Shutdown_5_Off)</visible>
					<visible>System.CanPowerDown</visible>
					<onclick>Close</onclick>
					<onclick>PowerDown</onclick>
				</item>
				<item id="6">
					<label>$LOCALIZE[13005]</label>
					<icon>shutdown/DefaultShutdown.png</icon>
					<visible>!Skin.HasSetting(Shutdown_6_Off)</visible>
					<onclick>Close</onclick>
					<onclick>ShutDown</onclick>
				</item>
				<item id="7">
					<label>$LOCALIZE[19026]</label>
					<icon>shutdown/DefaultTimer.png</icon>
					<visible>!Skin.HasSetting(Shutdown_7_Off)</visible>
					<onclick>Close</onclick>
					<onclick>AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
				</item>
				<item id="8">
					<label>$LOCALIZE[20151]</label>
					<icon>shutdown/DefaultTimer.png</icon>
					<visible>!Skin.HasSetting(Shutdown_8_Off)</visible>
					<visible>System.HasAlarm(shutdowntimer)</visible>
					<onclick>Close</onclick>
					<onclick>CancelAlarm(shutdowntimer)</onclick>
				</item>
				<item id="9">
					<label>$LOCALIZE[360]</label>
					<icon>shutdown/DefaultScreensaver.png</icon>
					<visible>!Skin.HasSetting(Shutdown_9_Off)</visible>
					<onclick>Close</onclick>
					<onclick>ActivateScreensaver</onclick>
				</item>
				<item id="10">
					<label>$LOCALIZE[20045]</label>
					<icon>shutdown/DefaultMastermode.png</icon>
					<visible>!Skin.HasSetting(Shutdown_10_Off)</visible>
					<visible>System.HasLocks</visible>
					<onclick>Close</onclick>
					<onclick>Mastermode</onclick>
				</item>
				<item id="11">
					<label>$LOCALIZE[20126]</label>
					<icon>shutdown/DefaultActor.png</icon>
					<visible>!Skin.HasSetting(Shutdown_11_Off)</visible>
					<visible>[System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)] + System.Loggedon</visible>
					<onclick>Close</onclick>
					<onclick>System.LogOff</onclick>
				</item>
				<item id="12">
					<label>$LOCALIZE[10004]</label>
					<icon>shutdown/DefaultSettings.png</icon>
					<visible>!Skin.HasSetting(Shutdown_12_Off)</visible>
					<onclick>Close</onclick>
					<onclick>ActivateWindow(Settings)</onclick>
				</item>
			</content>
		</control>
	</controls>
</window>
